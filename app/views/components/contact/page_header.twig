<!-- PAGE HEADER -->

 {% block style %}   
      <style>

 #page-header1  {
             box-shadow:1px 1px 5px rgba(0,0,0,0.6), -1px -1px 5px rgba(0,0,0,0.6);
              
            }

      #page-header1 h1 {
              font-weight:530;
              color:white;
              font-size:44px;
              text-shadow: 2px 2px 4px #000000;
              line-height:2rem;
              
            }

      #page-header1 h2 {
              font-weight:530;
              color:white;
              font-size:29px;
              text-shadow: 2px 2px 4px #000000;
              letter-spacing: 15px;
	            text-transform: uppercase;
              
            }

      #page-header1 hr {
                    
        width: 500px;
        margin: 0 auto;
        height: 2px;
        border: none;
        background: linear-gradient(to left, transparent, #fff, transparent);
         
            }

      #page-header1 .heading span,
       #page-header1 .sub span {
          display: inline-block;
        }

      #page-header1 .blockVid{
            position: relative;
            background-color: black;
            height: 15vh;
            min-height: 10rem;
            width: 100%;
            overflow: hidden;
            
          }

        #page-header1  .blockVid video {
            position: absolute;
            top: 50%;
            left: 50%;
            min-width: 100%;
            min-height: 100%;
            width: auto;
            height: auto;
            z-index: 0;
            -ms-transform: translateX(-50%) translateY(-50%);
            -moz-transform: translateX(-50%) translateY(-50%);
            -webkit-transform: translateX(-50%) translateY(-50%);
            transform: translateX(-50%) translateY(-50%);
          }

        #page-header1  .blockVid .caption {
            position: relative;
            z-index: 2;
          }

        #page-header1 .blockVid .overlay {
            position: absolute;
            top: 0;
            left: 0;
            height: 100%;
            width: 100%;
            background-color: black;
            opacity: 0.5;
            z-index: 1;
          }

    
