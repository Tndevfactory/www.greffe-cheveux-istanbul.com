  <header id="page-header1">
    <div class="container9">
      <div class="row">
        <div class="col-12 m-auto text-center blockVid">
          <div class="overlay"></div>

                      <video playsinline="playsinline" autoplay="autoplay" muted="muted" loop="loop">
                        <source src="https://drive.google.com/uc?export=view&id=1fnN1TvhsAd4KzXBcFaMxLvTxuaZiviLc" type="video/mp4">
                      </video>

                      <div class="caption h-100">
                        <div class="d-flex h-100 text-center align-items-center">
                          <div class="w-100 text-white">
                              <h1 class="heading">Contacter-Nous</h1>
                              <hr class="hr">
                              <h2 class="sub">hair&nbsp;Experts</h2>
                          </div>
                        </div>
                      </div>
        </div>
      </div>
    </div>
  </header>

  <script>
  $(function() {
	// extract every character using lettering.js
	$("#page-header1 .heading").lettering(); 
	$(".sub").lettering(); 
	
	// 	 gsap animation
	gsap.from("#page-header1 .heading span", {
    
		duration: 1,
		x: 100,
		rotation: 180,
		scale: 0,
		opacity: 0,
		stagger: .1, // delay every character in .1 second
		ease: "bounce.in"
	});
	
	gsap.from("#page-header1 .sub span", {
		duration: 1,
		x: -100,
		opacity: 0,
		rotation: 180,
		delay: 1,
		stagger: .1, // delay every character in .1 second
		ease: "bounce.in"
	});
	
	gsap.from("#page-header1 hr", {
		duration: 2,
		x: 400,
		opacity: 0,
		delay: 4,
		ease: "circ.out"
	});
});
  </script>